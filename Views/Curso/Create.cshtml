@model Curso 

@{
    ViewData["Title"] = "Creación de Curso";
    Layout = "Simple"; 
}

<h1>@ViewData["Title"] </h1>

<div asp-validation-summary="All"></div>
<form method="POST">
    <div>
        <label asp-for="Nombre"></label>    
        <input  asp-for="Nombre"/>
    </div>
        <div>
        <label asp-for="Dirección"></label>
        <input  asp-for="Dirección"/>
    </div>
        <div>
        <label asp-for="Jornada"></label>
        @Html.DropDownList(         //Sustituimos el input por un HTML HEPLPER para crear una lista desplegabele con la información de nuestro atributo
            "Jornada", 
            Html.GetEnumSelectList<TiposJornada>(), 
            "Seleccione jornada", 
            new {@class="form-control"}
        )
    </div>
    <input type="submit"/>
</form>

<p><i> @ViewBag.Fecha </i></p> 